%h1 Create New User

= form_tag users_path do


  
  = label :user, :email, 'Email'
  = text_field :user, 'email'
  
  = label :user, :password, 'Password'
  = password_field :user, 'password'
  
  = label :user, :confirm, 'Confirm'
  = password_field :user, 'confirm'

  
  = radio_button_tag :type, 'reviewer', true
  
  
  = radio_button_tag :type, 'owner', true
  

  = submit_tag 'Create Account'

<br />
= link_to "Already have an account? Sign In here!", user_login_path